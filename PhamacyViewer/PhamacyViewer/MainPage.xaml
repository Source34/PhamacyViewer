<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhamacyViewer.MainPage" 
             BackgroundColor="Black" NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content BackgroundColor="Black">
        <StackLayout Spacing="30" Padding="0" BackgroundColor="#004957" >
            <Frame BackgroundColor="#005557" Padding="24" CornerRadius="0" >
                <Label Text="Smart hospital"  TextTransform="Uppercase" HorizontalTextAlignment="Center" TextColor="#fff7eb" 
                   CharacterSpacing="5" FontSize="26"/>
            </Frame>
            <Button x:Name="SingInButton" Text="Войти" Margin="20,200,20,10" TextColor="#fff7eb" BackgroundColor="White" Background="#004957" HorizontalOptions="CenterAndExpand" 
               CharacterSpacing="5" FontSize="22" Clicked="SingInButton_Clicked"></Button>
            <Button x:Name="SingUpButton" TextColor="#fff7eb" Text="Регистрация" BackgroundColor="White" Background="#004957"  HorizontalOptions="Center"   
                CharacterSpacing="5" FontSize="22" Clicked="SingUpButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
    <!--"#006957"-->
</ContentPage>
